<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Text Style for the Widget -->
    <style name="Widget.PinkNote.Text" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Status Text (e.g., "focus") -->
    <style name="Widget.PinkNote.Text.Status">
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.95</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Timer Text (e.g., "25:00") -->
    <style name="Widget.PinkNote.Text.Timer">
        <item name="android:textSize">36sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>